/ {
    keymap {
        compatible = "zmk,keymap";

        /* ---------------------------
         * LAYER 0 — BASE (QWERTY, Mac-friendly)
         * - Home-row mods: A/J=GUI(⌘), S/K=ALT(⌥), D/L=CTRL(⌃), F/;=SHIFT(⇧)
         * - Left thumb: Enter (tap) / hold → L_NAVSYM
         * - Right thumb: Space (tap) / hold → L_NUMFN
         * --------------------------- */

        default_layer {
            label = "L_BASE";
            bindings = <
                /*  Row 1            */  &kp Q     &kp W     &kp E     &kp R     &kp T           &kp Y     &kp U     &kp I      &kp O      &kp P
                /*  Row 2 (home)     */  &mt LGUI A &mt LALT S &mt LCTRL D &mt LSHFT F &kp G      &kp H     &mt RSHFT J &mt RCTRL K &mt RALT L &mt RGUI SCLN
                /*  Row 3            */  &kp Z     &kp X     &kp C     &kp V     &kp B           &kp N     &kp M     &kp COMMA  &kp DOT    &kp SLASH
                /*  Thumbs (L→R)     */  &kp ESC   &lt L_NAVSYM RET  &kp TAB     &lt L_NUMFN SPC   &kp BSPC
            >;
        };

        /* ---------------------------
         * LAYER 1 — NAV + SYMBOLS
         * Hold Left-Thumb Enter → arrows + coding symbols
         * H/J/K/L = ←/↓/↑/→; U/I/O/P = Home/PgDn/PgUp/End
         * Top rows = symbol reach for coding
         * --------------------------- */

        layer_1 {
            label = "L_NAVSYM";
            bindings = <
                /*  Row 1            */  &kp EXCL   &kp AT      &kp HASH   &kp DLLR   &kp PERC        &kp CARET &kp AMPS  &kp ASTRK &kp LPAR   &kp RPAR
                /*  Row 2 (arrows)   */  &kp HOME   &kp PGDN    &kp PGUP   &kp END    &kp UNDS        &kp LEFT  &kp DOWN  &kp UP    &kp RGHT   &kp PIPE
                /*  Row 3            */  &kp LCBR   &kp RCBR    &kp LBKT   &kp RBKT   &kp EQUAL       &kp PLUS  &kp MINUS &kp TILDE &kp GRAVE  &kp BSLH
                /*  Thumbs (L→R)     */  &trans     &trans      &trans     &trans     &trans
            >;
        };

        /* ---------------------------
         * LAYER 2 — NUMBERS + FUNCTION / MEDIA
         * Hold Right-Thumb Space → nums, F-keys, media
         * --------------------------- */

        layer_2 {
            label = "L_NUMFN";
            bindings = <
                /*  Row 1 (F-keys)   */  &kp F1     &kp F2     &kp F3     &kp F4     &kp F5          &kp F6    &kp F7    &kp F8    &kp F9     &kp F10
                /*  Row 2 (numbers)  */  &kp N1     &kp N2     &kp N3     &kp N4     &kp N5          &kp N6    &kp N7    &kp N8    &kp N9     &kp N0
                /*  Row 3 (media/etc)*/  &kp MUTE   &kp VOLD   &kp VOLU   &kp MPLY   &kp MPRV        &kp MNXT  &kp PSCR  &kp INS   &kp DEL    &reset
                /*  Thumbs (L→R)     */  &trans     &trans     &trans     &trans     &trans
            >;
        };
    };
};

/*
Notes:
- &mt is ZMK's built-in Mod-Tap behavior: &mt <MOD> <KEY>
  e.g. &mt LGUI A = tap 'a', hold = Command(⌘).
- &lt is Layer-Tap: &lt <LAYER> <KEY>
  e.g. &lt L_NAVSYM RET = tap Enter, hold goes to L_NAVSYM.
- If your repo uses numeric layer indexes, replace L_NAVSYM with 1 and L_NUMFN with 2 consistently.
- If your shield layout order differs slightly, keep the *relative* ideas:
  - Left thumb: Enter/Layer
  - Right thumb: Space/Layer
  - Backspace on an easy thumb key
*/
